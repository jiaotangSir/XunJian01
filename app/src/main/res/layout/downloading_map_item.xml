<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cityName"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_finish"
            android:id="@+id/stopDownload"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="74dp"
            android:layout_marginEnd="74dp"
            android:id="@+id/downloadProgress"
            android:layout_alignBottom="@+id/cityName"
            android:layout_toLeftOf="@+id/stopDownload"
            android:layout_toStartOf="@+id/stopDownload" />

        <Button
            android:text="删除"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/removeOfflineMap"
            android:background="@drawable/button_frame1"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/stopDownload"
            android:layout_toLeftOf="@+id/stopDownload"
            android:layout_toStartOf="@+id/stopDownload"
            android:layout_width="40dp" />

    </RelativeLayout>
</LinearLayout>
