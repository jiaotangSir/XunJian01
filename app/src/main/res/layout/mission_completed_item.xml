<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:text="任务编号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="z20161101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/textView_missionId" />

    <TextView
        android:text="完成情况："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_missionId"
        android:layout_toRightOf="@+id/textView_missionId"
        android:layout_toEndOf="@+id/textView_missionId"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="已办"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:id="@+id/textView_missionCompletionStatus"
        android:textSize="14sp" />

    <TextView
        android:text="巡视区域："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="16dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="德州某地1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/textView_missionId"
        android:layout_alignStart="@+id/textView_missionId"
        android:id="@+id/textView_missionPlace" />

    <Button
        android:text="详情"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button_mission_detail"
        android:layout_alignBaseline="@+id/textView_missionPlace"
        android:layout_alignBottom="@+id/textView_missionPlace"
        android:layout_alignRight="@+id/textView_missionCompletionStatus"
        android:layout_alignEnd="@+id/textView_missionCompletionStatus"
        android:focusable="false"/>
</RelativeLayout>
