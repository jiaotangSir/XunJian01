<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mission_completed_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiaotang.xunjian01.ui.MissionCompletedDetail">


    <TextView
        android:text="已办任务详情"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView13"
        android:textSize="26sp"
        android:textAlignment="center"
        android:background="@color/colorBlack"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mission_completed_detail_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView13"
        android:background="@color/colorBlack"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:onClick="clickMissionCompletedDetailBack"/>

    <TextView
        android:text="任务编号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/button_mission_completed_detail_back"
        android:layout_alignEnd="@+id/button_mission_completed_detail_back"
        android:layout_marginTop="42dp"
        android:id="@+id/textView15" />

    <TextView
        android:text="z20161106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/textView_mission_completed_detail_Id" />

    <TextView
        android:text="巡视区域："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="29dp"
        android:id="@+id/textView19" />

    <TextView
        android:text="德州某地"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignLeft="@+id/textView_mission_completed_detail_Id"
        android:layout_alignStart="@+id/textView_mission_completed_detail_Id"
        android:id="@+id/textView_mission_completed_detail_place" />

    <TextView
        android:text="检查项目："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="31dp"
        android:id="@+id/textView22" />

    <TextView
        android:text="水管安装情况"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignLeft="@+id/textView_mission_completed_detail_place"
        android:layout_alignStart="@+id/textView_mission_completed_detail_place"
        android:id="@+id/textView_mission_completed_detail_project" />

    <TextView
        android:text="检查结果："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView29"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:text="通过"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignLeft="@+id/textView_mission_completed_detail_project"
        android:layout_alignStart="@+id/textView_mission_completed_detail_project"
        android:id="@+id/textView_mission_uncompleted_detail_result" />

</RelativeLayout>
